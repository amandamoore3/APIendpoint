<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Movies List</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <h1>Here are my movies</h1>

    {{#each movies}}
    <div>
      <h2>{{title}}</h2>
      <p>{{year}}</p>
      <p>{{genre}}</p>
      <a href="/movies/{{_id}}">Edit this movie</a>
    </div>
    {{/each}}
  </body>
</html>
